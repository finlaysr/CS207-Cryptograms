@startuml

' Maybe should be a interface
class Cryptogram {
    - cryptoID: int
    - cryptoType: CryptoType
    - solution: String
    - guesses: LinkedHashmap<Character, Character>
    - correctMappings: Hashmap<Character, Character>
    
    + getHint()
    + getSolution()
    + undoInput()

    ..getters..
    + getCryptoID(): int
    + getFrequency(): Hashmap<Character, int>
}

enum CryptoType{

    + letter-to-letter
    + letter-to-number
}



